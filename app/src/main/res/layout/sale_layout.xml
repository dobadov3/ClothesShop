<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="100dp"
    android:layout_height="165dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:id="@+id/imageClothesSale"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvClothesSale"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:layout_below="@+id/imageClothesSale"
        android:layout_centerInParent="true"
        android:text="Clothes Name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvClothesPriceOG"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_below="@+id/tvClothesSale"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        android:text="Clothes Price"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvClothesPriceSale"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_below="@+id/tvClothesPriceOG"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        android:text="Clothes Price"/>
</RelativeLayout>