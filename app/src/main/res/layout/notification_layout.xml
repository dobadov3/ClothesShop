<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/back_ground"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@color/black"
        android:id="@+id/imageNoti"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitleNoti"
        android:layout_toRightOf="@+id/imageNoti"
        android:text="Title"
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDateNoti"
        android:text="Date"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tvTitleNoti"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvContent"
        android:layout_below="@+id/tvTitleNoti"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageNoti"
        android:text="content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/imageNoti"
        android:background="@color/back_ground"/>

</RelativeLayout>