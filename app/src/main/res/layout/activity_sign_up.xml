<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignInActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/relativeTopSignUp"
        android:background="@drawable/custom_top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ĐĂNG KÝ"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/segoeuil"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ và tên:"
        android:id="@+id/tvUserNameSignUp"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/relativeTopSignUp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/segoeuil"
        android:textColor="@color/black"/>
    <EditText
        android:layout_width="330dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvUserNameSignUp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:id="@+id/etUserNameSignUp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:id="@+id/tvEmailSignUp"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/etUserNameSignUp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/segoeuil"
        android:textColor="@color/black"/>
    <EditText
        android:layout_width="330dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvEmailSignUp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:id="@+id/etEmailSignUp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:id="@+id/tvPasswordSignUp"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/etEmailSignUp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/segoeuil"
        android:textColor="@color/black"/>
    <EditText
        android:layout_width="330dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvPasswordSignUp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:id="@+id/etPasswordSignUp"/>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/etPasswordSignUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/top_color"
        android:text="ĐĂNG KÝ" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear1"
        android:orientation="horizontal"
        android:fontFamily="@font/segoeuil"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnSignUp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnSignIn"
            android:text="Bạn đã có tài khoản? - "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textColor="@color/bottom_color"
            android:id="@+id/tvSignIn"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#48C6EF"
        android:text="Quên mật khẩu?"
        android:layout_below="@id/linear1"
        android:layout_marginTop="20dp"
        android:id="@+id/tvForgotSignUp"/>



</RelativeLayout>