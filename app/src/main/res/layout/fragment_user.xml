<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.UserFragment">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="20dp"
            android:src="@drawable/nopath" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgAvatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNameUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeuil"
                android:text="Nguyễn Duy Anh"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvBirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeuil"
                android:text="04/11/2000"
                android:textColor="@color/black" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative2"
        android:background="@drawable/custom_rl"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/relative1">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imagePersonal"
            android:src="@drawable/ic_group_24px"
            android:layout_margin="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeuil"
            android:textColor="@color/black"
            android:text="Thông tin cá nhân"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imagePersonal"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_chevron_right_24px"
            android:id="@+id/btnPersonal"
            android:background="#F3F1F1"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative3"
        android:background="@drawable/custom_rl"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/relative2">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_event_note_24px"
            android:id="@+id/imageBill"
            android:layout_margin="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeuil"
            android:textColor="@color/black"
            android:text="Quản lý đơn hàng"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageBill"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_chevron_right_24px"
            android:id="@+id/btnBill"
            android:background="#F3F1F1"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative4"
        android:background="@drawable/custom_rl"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/relative3">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageHistory"
            android:src="@drawable/ic_import_contacts_24px"
            android:layout_margin="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeuil"
            android:textColor="@color/black"
            android:text="Lịch sử mua hàng"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageHistory"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_chevron_right_24px"
            android:id="@+id/btnHistory"
            android:background="#F3F1F1"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative5"
        android:background="@drawable/custom_rl"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/relative4">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageContact"
            android:src="@drawable/ic_ring_volume_24px"
            android:layout_margin="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeuil"
            android:textColor="@color/black"
            android:text="Liên hệ"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageContact"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_chevron_right_24px"
            android:id="@+id/btnContact"
            android:background="#F3F1F1"/>

    </RelativeLayout>

</RelativeLayout>