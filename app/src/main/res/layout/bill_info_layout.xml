    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Name's Clothes"
        android:id="@+id/tv_name_clothes_billInfo"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/imageViewBillInfo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCountBillInfo"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:text="x1"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/tvPriceBillInfo"
